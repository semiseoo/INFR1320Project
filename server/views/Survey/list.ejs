<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1 id = "title"><%= title %></h1>
            <br>
            <% if(typeof displayName == 'string' && displayName) { %>
            <a href="/surveyslist/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add Survey
            </a>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <th class="text-center col-2">Name</th>
                    <th class="col-4">Description</th>
                    <th class="text-center col-1">Active</th>
                    <th class="text-center col-1">Edit</th>
                    <th class="text-center col-1">Delete</th>
                </tr>
                <% for(let count=0;count<SurveyList.length;count++) { %>
                <tr class="d-flex">
                    <td class="text-center col-2"><%= SurveyList[count].Name %></td>
                    <td class="col-4"><%= SurveyList[count].Description %> </td>
                    <td class="text-center col-1"><%= SurveyList[count].Active %></td>
                    <td class="text-center col-1">
                        <a href="/surveyslist/edit/<%= SurveyList[count]._id%>"
                            class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil-alt"></i>Edit
                    </a>
                    </td>
                    <td class="text-center col-1">
                        <a href="/surveyslist/delete/<%= SurveyList[count]._id%>"
                            class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i>Delete
                    </a>
                    </td>
                </tr>    
                    <%} %>
            </table>
            <% } else {%>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <th class="text-center col-2">Name</th>
                    <th class="col-8">Description</th>
                    <th class="text-center col-2">Active</th>

                </tr>
                <% for(let count=0;count<SurveyList.length;count++) { %>
                <tr class="d-flex">
                    <td class="text-center col-2"><%= SurveyList[count].Name %></td>
                    <td class="col-8"><%= SurveyList[count].Description %> </td>
                    <td class="text-center col-2"><%= SurveyList[count].Active %></td>
                    </a>
                </tr>    
                <%} %>
            </table>
            <% } %>
        </div>
    </div>
</main>
<%- include ../Partials/footer.ejs%>
